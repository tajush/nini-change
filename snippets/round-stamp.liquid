<div class="round-stamp" style="width:{{ section.settings.round_stamp_width }}px; height:{{ section.settings.round_stamp_width }}px;">
	<svg class="round-stamp-animate"  viewBox="0 0 500 500">
		<defs>
			<path id="textcircle" d="
								M 100, 250
								a 150,150 0 1,1 300,0
								a 150,150 0 1,1 -300,0
							"/>

		</defs>
		<text dy="0" dx="0" style="font-size: {{ section.settings.round_stamp_size }}px; letter-spacing: {{ section.settings.round_stamp_letter_spacing }}px;">
			<textPath xlink:href="#textcircle">
				{{ section.settings.round_stamp_text }}
			</textPath>
		</text>
	</svg>
</div>
